<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.datafly.recommend.dao.ContactDao">
    <select id="selectByIds" resultType="com.datafly.recommend.domain.ContactEntity">
        select * from contact
        WHERE id IN
        <foreach collection="ids" index="index" item="item"
                 open="(" separator="," close=")">
            #{item}
        </foreach>
    </select>
    <select id="selectById" resultType="com.datafly.recommend.domain.ContactEntity">
        select *
        from contact
        WHERE id = #{id}
    </select>
</mapper>
